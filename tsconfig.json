{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "sourceRoot": "./src",
    "target": "es2018",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src"
  ]
}
